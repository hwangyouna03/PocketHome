<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformationActivity">


        <!--고정 layout-->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="39dp"
            android:layout_marginStart="16sp"
            android:layout_marginLeft="16sp"
            android:layout_marginTop="16sp"
            android:background="#FFFFFF"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/loginicon2"
            android:layout_width="45sp"
            android:layout_height="46sp"
            android:layout_marginTop="16sp"
            android:layout_marginEnd="11sp"
            android:layout_marginRight="28sp"
            android:layout_marginBottom="30sp"
            app:srcCompat="@drawable/loginicon" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52sp"
            android:layout_marginLeft="52sp"
            android:layout_marginEnd="1sp"
            android:layout_marginRight="1sp"
            android:layout_marginBottom="3sp"
            android:background="@drawable/news1" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52sp"
            android:layout_marginLeft="52sp"
            android:layout_marginEnd="1sp"
            android:layout_marginRight="1sp"
            android:layout_marginBottom="3sp"
            android:background="@drawable/map1" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52sp"
            android:layout_marginLeft="52sp"
            android:layout_marginEnd="1sp"
            android:layout_marginRight="1sp"
            android:layout_marginBottom="3sp"
            android:background="@drawable/information1"
             />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52sp"
            android:layout_marginLeft="52sp"
            android:layout_marginEnd="52sp"
            android:layout_marginRight="52sp"
            android:layout_marginBottom="3sp"
            android:background="@drawable/draw1"
            />


    <!--center-->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ㄱ"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="">

            </TextView>
        </TableRow>
    </TableLayout>

</androidx.appcompat.widget.LinearLayoutCompat>